[Unit]
Description=Openheating Thermometer Service

[Service]
User=openheating
Environment=PYTHONPATH=${libdir}
ExecStart=${bindir}/openheating-thermometers.py --system --configfile=/etc/openheating/thermometers.ini
Type=dbus
BusName=org.openheating.Thermometers

[Install]
WantedBy=multi-user.target
