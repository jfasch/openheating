[Unit]
Description=Openheating HTTP Interface
Wants=openheating-thermometers.service
After=openheating-thermometers.service

[Service]
User=openheating
Environment=PYTHONPATH=${libdir}
ExecStart=${bindir}/openheating-http.py --system --templates ${sharedir}/web/templates/ --static ${sharedir}/web/static
Type=notify

[Install]
WantedBy=multi-user.target
